<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
   >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bgcurve"
        android:scaleType="fitStart"

        />
    <ImageView
        android:id="@+id/sign_loginIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_below="@id/sign_loginIV"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/regname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user_icon"
        android:background="@drawable/roundtextview"
        android:paddingLeft="5dp"
        android:hint="  Enter Name"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/regemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/email_icon"
        android:background="@drawable/roundtextview"
        android:paddingLeft="5dp"
        android:hint="  Enter Email"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/regname"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/regphone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/phone_icon"
        android:background="@drawable/roundtextview"
        android:paddingLeft="5dp"
        android:hint="  Enter Phone"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/regemail"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/regpass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/lock_icon"
        android:paddingLeft="5dp"
        android:background="@drawable/roundtextview"
        android:layout_below="@+id/regphone"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/regbtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/regpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dashroundbtn"
        android:text="  Register"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp">

    </Button>
</RelativeLayout>