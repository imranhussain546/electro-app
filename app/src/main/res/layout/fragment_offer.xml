<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.offers.OfferFragment">
<androidx.viewpager.widget.ViewPager
    android:id="@+id/offer_imageView"
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
    <TextView
        android:id="@+id/offer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest offers"
        android:textColor="@color/black"
        android:textSize="20sp"
       android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/offer_imageView"
        android:layout_marginTop="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offer_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/offer_textView"/>

</RelativeLayout>